#!/bin/bash
if [ ${DEBUG:-no} = "yes" ]; then set -x; fi
set -euo pipefail

name="${NAME:-${1:-}}"
echo name $name
if [ -z "$name" ]; then >&2 echo "Usage: $(basename $0) NAME [TYPE]"; >&2 echo "TYPE can be: stdout, out, stderr, err, both"; exit 1; fi

source ${BASE_PATH:-$HOME/server}/files/bin/internal/environment.sh

type="${2:-both}"
filter="${3:-}"

if [ ! -z "$filter" ]; then
  filter=a
fi

case $type in
  *err)
    type=stderr
  ;;
  *out)
    type=stdout
  ;;
  both)
    type=both
  ;;
  *)
    >&2 echo "Invalid log type \"$type\""
    exit 1
  ;;
esac

cd $log_files
pwd
log="$(find -name "arma3server_${name}*.${type}.*" | sort | tail -n1)"
#log="$(echo $f | sort | tail -n1)"
echo $log
less +F $log
